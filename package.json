{
  "name": "lumina",
  "version": "1.2.0",
  "description": "Premium Bible Study Software",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "author": "PHOENIX",
  "license": "MIT",
  "dependencies": {
    "electron-updater": "^6.1.7"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.faithstream.app",
    "publish": [
      {
        "provider": "github",
        "owner": "phoenix-2code",
        "repo": "lumina"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.png"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false,
      "compressor": "lzma"
    },
    "extraResources": [
      "php/**",
      "assets/**",
      "src/**"
    ]
  }
}
